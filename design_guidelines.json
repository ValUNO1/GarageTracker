  },
  "layout_templates": {
    "dashboard_grid": {
      "hero_card": "col-span-1 md:col-span-8 lg:col-span-8 row-span-2",
      "stats_card": "col-span-1 md:col-span-4 lg:col-span-4 row-span-1",
      "list_card": "col-span-1 md:col-span-4 lg:col-span-4 row-span-2",
      "action_card": "col-span-1 md:col-span-4 lg:col-span-4"
    }
  },
  "instructions_to_main_agent": {
    "do_not": [
      "Do NOT use pure black (#000000) for backgrounds.",
      "Do NOT use 'Inter' for headings - use 'Outfit'.",
      "Do NOT make the dashboard crowded - leave whitespace.",
      "Do NOT use complex gradients - stick to solid colors or very subtle washes."
    ],
    "must_do": [
      "Implement a toggle for Light/Dark mode in the Settings or Navbar.",
      "Use the Bento Grid layout for the main dashboard.",
      "Use 'Sonner' for all toast notifications (success/error).",
      "Use 'Recharts' or Shadcn Charts for any data visualization (mileage trends).",
      "Ensure all interactive elements have hover states.",
      "Use the provided image URLs for placeholders if the user has not uploaded any."
    ],
    "implementation_steps": [
      "1. Setup Tailwind config with new colors and fonts.",
      "2. Create the Layout shell (Navbar, Sidebar).",
      "3. Build the Dashboard using the Bento Grid strategy.",
      "4. Implement the 'Add Car' flow using Shadcn Dialog/Form.",
      "5. Create the Maintenance Log list with clear status badges."
    ]
  },
  "universal_guidelines": {
    "general": [
      "Don't make generic centered layouts.",
      "Create depth through layered design elements.",
      "Use glass-morphism effects for sticky headers.",
      "Every interaction needs micro-animations.",
      "Use 2-3x more spacing than feels comfortable."
    ],
    "accessibility": [
      "Ensure text contrast meets APCA/WCAG standards.",
      "All interactive elements must include 'data-testid'.",
      "Focus states must be clearly visible."
    ]
  }
}