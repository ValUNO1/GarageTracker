{
  "design_system": {
    "app_name": "AutoTrack",
    "theme_strategy": "Soft Utility",
    "emotional_archetype": "Friendly & Trustworthy",
    "typography": {
      "headings": {
        "font_family": "Outfit, sans-serif",
        "weights": ["500", "600", "700"],
        "usage": "Use for all page titles, card headers, and major metrics."
      },
      "body": {
        "font_family": "Inter, sans-serif",
        "weights": ["400", "500"],
        "usage": "Use for all paragraph text, labels, and inputs."
      },
      "scale": {
        "h1": "text-4xl md:text-5xl font-bold tracking-tight",
        "h2": "text-3xl font-semibold tracking-tight",
        "h3": "text-2xl font-semibold",
        "h4": "text-xl font-medium",
        "body_lg": "text-lg leading-relaxed",
        "body_base": "text-base leading-relaxed",
        "caption": "text-sm text-muted-foreground"
      }
    },
    "colors": {
      "primary": {
        "name": "Mechanic Indigo",
        "hex": "#4F46E5",
        "tailwind": "bg-indigo-600 text-white hover:bg-indigo-700",
        "usage": "Primary buttons, active states, key branding elements."
      },
      "secondary": {
        "name": "Slate Neutral",
        "hex": "#F1F5F9",
        "tailwind": "bg-slate-100 dark:bg-slate-800 text-slate-900 dark:text-slate-50",
        "usage": "Secondary buttons, card backgrounds in light mode."
      },
      "accent": {
        "name": "Maintenance Amber",
        "hex": "#F59E0B",
        "tailwind": "text-amber-500 bg-amber-50 dark:bg-amber-900/20",
        "usage": "Warnings, 'Due Soon' badges, critical alerts."
      },
      "success": {
        "name": "Go Green",
        "hex": "#10B981",
        "tailwind": "text-emerald-500 bg-emerald-50 dark:bg-emerald-900/20",
        "usage": "Success states, 'Good Condition' badges."
      },
      "background": {
        "light": "bg-slate-50",
        "dark": "dark:bg-slate-950"
      },
      "surface": {
        "light": "bg-white",
        "dark": "dark:bg-slate-900"
      }
    },
    "layout": {
      "spacing_scale": "generous",
      "container": "max-w-7xl mx-auto px-4 sm:px-6 lg:px-8",
      "radius": "rounded-xl",
      "grid_strategy": "Bento Grid (Asymmetric)",
      "modes": {
        "dashboard": "grid grid-cols-1 md:grid-cols-12 gap-6",
        "card_list": "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
      }
    },
    "components": {
      "buttons": {
        "primary": "rounded-full px-6 py-2.5 font-medium transition-all hover:shadow-lg hover:-translate-y-0.5 active:translate-y-0",
        "secondary": "rounded-full px-6 py-2.5 font-medium bg-secondary text-secondary-foreground hover:bg-secondary/80",
        "ghost": "rounded-full hover:bg-slate-100 dark:hover:bg-slate-800"
      },
      "cards": {
        "base": "rounded-xl border border-slate-200 dark:border-slate-800 bg-card text-card-foreground shadow-sm hover:shadow-md transition-shadow duration-200",
        "interactive": "cursor-pointer hover:border-indigo-500/50 dark:hover:border-indigo-400/50"
      },
      "inputs": {
        "base": "rounded-lg border-slate-200 dark:border-slate-800 focus:ring-2 focus:ring-indigo-500 focus:border-transparent bg-white dark:bg-slate-900"
      }
    },
    "animation": {
      "micro_interactions": "transition-all duration-200 ease-out",
      "page_transition": "animate-in fade-in slide-in-from-bottom-4 duration-500",
      "hover_lift": "hover:-translate-y-1 hover:shadow-lg"
    }
  },
